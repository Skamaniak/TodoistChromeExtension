{
  "name": "Todoist Extension",
  "version": "1.0",
  "description": "Todoist Extension for reporting tasks from common communicators like Gmail, Slack, etc.",
  "permissions": [
    "storage",
    "activeTab",
    "declarativeContent",
    "https://beta.todoist.com/*"
  ],
  "background": {
    "scripts": [
      "scripts/messageBus.js",
      "scripts/backend/backend.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "scripts/lib/inboxsdk.js",
        "scripts/content/gmail.js",
        "scripts/messageBus.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://snappli.atlassian.net/browse/*",
        "https://snappli.atlassian.net/secure/*"
      ],
      "js": [
        "scripts/content/jira.js",
        "scripts/messageBus.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://snappli.atlassian.net/wiki/*"
      ],
      "js": [
        "scripts/content/confluence.js",
        "scripts/messageBus.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "https://mail.google.com/*",
        "https://snappli.atlassian.net/*"
      ],
      "js": [
        "scripts/content/other.js",
        "scripts/messageBus.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  },
  "browser_action": {
    "default_icon": {
      "32": "images/todoist-icon-32.png",
      "64": "images/todoist-icon-64.png",
      "128": "images/todoist-icon-128.png"
    }
  },
  "icons": {
    "32": "images/todoist-icon-32.png",
    "64": "images/todoist-icon-64.png",
    "128": "images/todoist-icon-128.png"
  },
  "manifest_version": 2
}